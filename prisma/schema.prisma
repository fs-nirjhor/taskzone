generator client {
  provider = "prisma-client-js"
}
//// using supabase for url
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Board {
  id String @id @default(uuid())
  title String
}

